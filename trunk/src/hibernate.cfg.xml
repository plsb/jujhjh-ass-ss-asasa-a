<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-configuration PUBLIC 
    "-//Hibernate/Hibernate Configuration DTD//EN"
    "http://hibernate.sourceforge.net/hibernate-configuration-3.0.dtd">
<hibernate-configuration>
    <session-factory>
    	<!-- Configuração da conexão com o Banco PostgreSQL e dialeto -->
		<property name="dialect">org.hibernate.dialect.PostgreSQLDialect</property>
        <property name="current_session_context_class">thread</property>
		<property name="hibernate.hdm2dll.auto">update</property>
		<property name="connection.datasource">java:/comp/env/jdbc/scs</property>
		<property name="hibernate.hbm2ddl.auto">update</property>
		<mapping class="scs.usuario.Usuario"/>
		<mapping class="scs.unidade.Unidade"/>
		<mapping class="scs.segmento.Segmento"/>
		<mapping class="scs.municipio.Municipio"/>
		<mapping class="scs.bairro.Bairro"/>
		<mapping class="scs.rua.Rua"/>
		<mapping class="scs.area.Area"/>
		<mapping class="scs.microarea.Microarea"/>
		<mapping class="scs.residencia.Residencia"/>
		<mapping class="scs.familiar.Familiar"/>
		<mapping class="scs.hanseniase.Hanseniase"/>
		<mapping class="scs.diabetes.Diabetes"/>
		<mapping class="scs.hipertensao.Hipertesao"/>
		<mapping class="scs.tuberculose.Tuberculose"/>
		<mapping class="scs.gestante.Gestante"/>
		
			
    </session-factory>
</hibernate-configuration>

